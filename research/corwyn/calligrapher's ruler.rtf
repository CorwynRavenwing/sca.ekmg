\par \pard\plain \s1\cf1{\*\hyphen2\hyphlead2\hyphtrail2\hyphmax0}\rtlch\af1\afs24\lang1033\ltrch\dbch\af1\afs24\langfe1033\loch\f1\fs24\lang1033\qc\rtlch\ab\ltrch\dbch\ab\loch\b {\ltrch\loch\f1 Corwyn Ravenwing}
